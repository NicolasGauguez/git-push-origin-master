<h1>My tasks</h1>
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<%= link_to "Task list", tasks_path %>
<%= link_to "Edit the task", edit_path %>
<%= link_to task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } do%>
            <i class="fas fa-trash"></i>
<% end %>

